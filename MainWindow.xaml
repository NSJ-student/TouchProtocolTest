<Window x:Name="mainWindow" x:Class="TouchProtocolTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchProtocolTest"
        mc:Ignorable="d"
        Title="Touch Test" Height="450" Width="800" KeyDown="Window_KeyDown" Closing="Window_Closing" SizeChanged="mainWindow_SizeChanged">
    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="cvsTouch" Margin="0,0,0.2,0" Grid.RowSpan="2" MouseLeave="cvsTouch_MouseLeave" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100" Background="Black" ClipToBounds="True">
            <TextBlock x:Name="txtCursorPos" HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" Text="none" VerticalAlignment="Top" Padding="5,2" Background="White" Canvas.Left="26" Canvas.Top="44" Panel.ZIndex="100"/>
        </Canvas>
        <StackPanel x:Name="stackConnect" Orientation="Horizontal" Margin="5" Grid.ColumnSpan="4">
            <Label Content="Port: " HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="cbSerialPort" HorizontalAlignment="Left" VerticalAlignment="Center" Width="90" Margin="0,2,0,1.6"/>
            <Label Content="Baudrate: " HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox x:Name="lblBaudrate" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="460800" VerticalAlignment="Center" Width="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button x:Name="btnSerialConnect" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="97" Margin="20,0,0,3.6" Click="btnSerialConnect_Click"/>
        </StackPanel>
        <GridSplitter x:Name="splitter"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="#FFECECEC" 
              ShowsPreview="True" Width="5" Margin="0" Grid.Column="1" Grid.Row="1"
           />
        <Grid x:Name="stackControl" Grid.Row="1" Grid.Column="2" Margin="10" SizeChanged="StackPanel_SizeChanged">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Range: " HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScreenWidth" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="1920" VerticalAlignment="Center" Width="45" RenderTransformOrigin="1.101,2.361" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" BorderThickness="0"/>
                <Label Content="x" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtScreenHeight" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="1080" VerticalAlignment="Center" Width="45" RenderTransformOrigin="0.828,0.49" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0"/>
                <Button x:Name="btnScreenSizeSet" Content="SET" HorizontalAlignment="Left" VerticalAlignment="Center" Width="48" Margin="10,0,0,0" Click="btnScreenSizeSet_Click"/>
            </StackPanel>
            <ListView x:Name="listTouchData" Margin="0,10,0,0" Grid.Row="2">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}"/>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}"/>
                        <GridViewColumn Header="X" DisplayMemberBinding="{Binding X}" Width="40"/>
                        <GridViewColumn Header="Y" DisplayMemberBinding="{Binding Y}" Width="40"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="btnTouchClear" Content="Clear" Click="btnTouchClear_Click" Margin="0" Grid.Row="3"/>

            <Expander Grid.Row="4" Margin="0,10,0,0" Header="Finger Setting">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Canvas x:Name="cvsFinger" ClipToBounds="True" Background="Black" Grid.Row="0" Height="150" Width="150" Margin="0,10,0,0"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Grid.Row="1">
                        <Label Content="Finger Count : " VerticalAlignment="Center"/>
                        <ComboBox x:Name="cbFingerCount" Width="50" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="cbFingerCount_SelectionChanged">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        <Button x:Name="btnFingerDefault" Content="Default" Margin="15,0,0,0" Padding="5,1" Click="btnFingerDefault_Click"></Button>
                    </StackPanel>
                </Grid>
            </Expander>
            <CheckBox x:Name="cbToolTipEnable" Content=" Tooltip Enable" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Row="1" Padding="0"/>
        </Grid>

    </Grid>
</Window>
